{
	"version": "2.0.0",
	"tasks": [
		{ 
			"type": "cppbuild",
			"label": "Build with clang 12.0.0",
			"command": "/masa端st端/projects/helloworld/clang++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-std=c++2a",
				"${workspaceFolder}/*.cpp",
				"-o",
				"${fileDirname}/rooster"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/clang++"
		},
		{
			"type": "cppbuild",
			"label": "Build with GCC 12.0.0",
			"command": "/masa端st端/projects/helloworld/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-std=c++2a",
				"${workspaceFolder}/*.cpp",
				"-o",
				"${fileDirname}/rooster"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		}
	]
}